<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets"
		xmlns:gap="http://phonegap.com/ns/1.0"      
        id="Rimac Music Player"
        version= "1.0.0" >
  <name>Rimac Music Player</name> 
  <description>UI</description>
  <author href="http://therrax.pl" email="therrax@gmail.com">Therrax & Dragonet</author>
  <platform name="android" />
  <plugin name="cordova-plugin-device" spec="~1.1.4" />
  <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
  <plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
  <icon src="www/img/ico-57x57.png"  width="57" height="57" density="mdpi" />
  <splash src="www/img/splash.png" />
  <preference name="AutoHideSplashScreen" value="true" />
  <preference name="SplashScreenDelay" value="3000" />
  
</widget>
